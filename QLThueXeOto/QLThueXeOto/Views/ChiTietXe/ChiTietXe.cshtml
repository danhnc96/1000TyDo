@using QLThueXeOto.Models;
@model Xe
<link href="~/Content/NguoiDungLayoutCss/MenuCuon.css" rel="stylesheet" />
<script src="~/Content/NguoiDungLayoutCss/MenuCuonJS.js"></script>
<link href="~/Content/NguoiDungLayoutCss/NguoiDungLayoutCss.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700&display=swap" rel="stylesheet">
<script src="~/Content/JavaScript1.js"></script>
<link href="~/Content/NguoiDungLayoutCss/PhongTo.css" rel="stylesheet" />
<script src="~/Content/NguoiDungLayoutCss/phongTo.js"></script>
@{
    ViewBag.Title = "ChiTietXe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<div id="ThongTinXe">
    <h2>THÔNG TIN CHI TIẾT VỀ XE</h2>
    <div id="HinhAnh" class="img-magnifier-container">
        <img id="myimage" src="@Url.Content("~/HinhAnh/" + Model.HinhAnh)" style=" width:600px; height:380px;" />
    </div>
    <div id="ThongTinSP">
        <div id="MaXe">Mã Xe: @Model.MaXe</div>
        <div id="BienSo">Biển Số: @Model.BienSo</div>
        <div id="MoTa">Mô tả: @Model.MoTa</div>
        <div id="TinhTrang">Tình Trạng: @Model.TinhTrang</div>
        <div id="Gia" title="@Model.GiaThue"><span>Giá Xe: </span><p id="DonGia">@string.Format("{0:0,0 }", Model.GiaThue) VNĐ</p></div>
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaXe = Model.MaXe, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" value="Thuê Xe" id="btnGioHang" class="btn btn-primary" />
        }

    </div>
    <div style="clear:both"></div>
</div>
<div style="clear:both"></div>

<style>
    .HuongDan {
        display: none;
    }

    #ThongTinXe {
        width: 90%;
        margin-left: 5%;
    }

    #HinhAnh {
        float: left;
        margin-right: 10px;
        padding-left: 10px;
    }

    #ThongTinSP {
        float: left;
    }

    #MoTa, #TrangThai {
        font-size: 15pt;
        font-weight: normal;
        color: black;
    }

    #Gia span {
        color: red;
        font-size: 10pt;
        font-weight: normal;
    }

    #Gia p {
        margin-top: -5px;
        color: red;
        font-size: 30pt;
        font-weight: normal;
    }
</style>
<script>
    /*độ phóng to*/
    magnify("myimage", 2.5);
</script>


