@using QLThueXeOto.Models;
@model List<GioHang>
@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>GioHang</h2>
<table border="1">
    <tr>
        <td>Mã Xe</td>
        <td>Biển Số</td>
        <td>Hình Ảnh</td>
        <td>Đơn Giá</td>
        <td>Số Lượng</td>
        <td>Thành Tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaXe</td>
            <td>@item.sTenXe</td>
            <td><img src="@Url.Content("~/HinhAnh/" + item.sHinhAnh)" width="70" height="50" /></td>
            <td>@string.Format("{0:0,0}", item.dDonGia) VNĐ</td>
            @using(Html.BeginForm("CapNhatGioHang","GioHang", new { @iMaSP = item.iMaXe }))
            {
                <td>@Html.TextBox("txtSoLuong", @item.iSoLuong) </td>     
                <td>@string.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                <td><input type="submit" value="Cập Nhật" /></td>
                <td>@Html.ActionLink("Xoa","XoaGioHang",new {@iMaSP=item.iMaXe })</td>
            }     
        </tr>
    }
</table>
